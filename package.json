{
    "name": "yakad",
    "version": "1.0.0",
    "private": true,
    "description": "Yakad - A comprehensive React component library and utilities",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces",
        "typecheck": "npm run typecheck --workspaces",
        "test": "npm run test --workspaces",
        "prepublish:check": "npm run lint && npm run build && npm run typecheck && npm run test",
        "publish:eslint-plugin-guard": "npm i && npm publish --prefix packages/eslint-plugin-guard",
        "publish:lib": "npm i && npm publish --prefix packages/lib",
        "publish:sync": "npm i && npm publish --prefix packages/sync",
        "publish:symbols": "npm i && npm publish --prefix packages/symbols",
        "publish:ui": "npm i && npm publish --prefix packages/ui",
        "publish:x": "npm i && npm publish --prefix packages/x.",
        "idev:docs": "npm run idev --prefix docs",
        "ldev:docs": "npm run build && cd docs && npm run ldev"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@typescript-eslint/eslint-plugin": "^6",
        "@typescript-eslint/parser": "^6",
        "copyfiles": "^2.4.1",
        "eslint": "^8.0.0 <9.0.0",
        "eslint-plugin-react": "^7",
        "eslint-plugin-react-hooks": "^4",
        "jest": "^30.1.2",
        "rimraf": "^6",
        "ts-jest": "^29.4.1",
        "typescript": "<5.4.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/natiq-foundation/yakad.git"
    },
    "keywords": [
        "yakad",
        "react",
        "components",
        "ui",
        "typescript",
        "monorepo"
    ],
    "author": "Natiq",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/natiq-foundation/yakad/issues"
    },
    "homepage": "https://yakad.natiq.net"
}
